root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[package.json]
indent_style = space
indent_size = 4
max_line_length = 200

[lerna.json]
indent_style = space
indent_size = 4
max_line_length = 200

[.babelrc]
indent_style = space
indent_size = 4
max_line_length = 200
