{
  "name": "lerna-terminal",
  "version": "0.0.0-semantically-released",
  "description": "Powerful cli ui for monorepos",
  "repository": {
    "type": "git",
    "url": "https://github.com/smollweide/lerna-terminal.git"
  },
  "keywords": [
    "cli",
    "cliui",
    "cli-ui",
    "lerna",
    "terminal",
    "monorepo",
    "monorepository",
    "monorepos"
  ],
  "author": "Simon Mollweide <simon.mollweide@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smollweide/lerna-terminal/issues"
  },
  "homepage": "https://github.com/smollweide/lerna-terminal#readme",
  "bin": "src/index.js",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0"
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "babylon",
    "semi": true
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js}",
      "!src/index.js",
      "!src/get-lerna-packages.js",
      "!src/get-lerna.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@namics/eslint-config": "4.1.0",
    "commitizen": "2.9.6",
    "cross-env": "5.1.0",
    "cz-conventional-changelog": "2.0.0",
    "deep-copy": "1.4.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.3.0",
    "npm-run-all": "4.1.1",
    "prettier": "1.7.4",
    "semantic-release": "8.2.0"
  },
  "dependencies": {
    "chalk": "2.2.0",
    "commander": "2.11.0",
    "string-length": "2.0.0"
  },
  "scripts": {
    "commit": "git-cz",
    "precommit": "lint-staged && npm-run-all lint test",
    "test": "cross-env NODE_ENV=test node_modules/.bin/jest",
    "test:dev": "cross-env NODE_ENV=test node_modules/.bin/jest --watch --notify",
    "test:coverage": "cross-env NODE_ENV=test node_modules/.bin/jest --coverage",
    "lint": "npm-run-all lint:*",
    "lint:js": "node_modules/.bin/eslint .",
    "prettier": "node_modules/.bin/prettier --write 'src/**/*.js' 'bin/**/*.js' --config package.json",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  }
}
